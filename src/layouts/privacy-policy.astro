---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import type { PrivacyPolicy } from '../types';

interface Props {
	content: PrivacyPolicy;
}

const { content } = Astro.props;
---

<html lang="en">
	<head>
		
		<MainHead title= {content.name + " Privacy | Bleeping Dragon"} description={content.name + " Privacy | Bleeping Dragon"} />
		
		<style>
			.content {
				font-size: var(--f-u1);
				line-height: 2.2;
				max-width: 50em;
				margin: auto;
			}

			.wrapper {
				padding-bottom: 4em;
				margin-bottom: 4em;
			}
		</style>
	</head>

	<body>
		<Nav/>

		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>

		<Footer/>

	</body>
</html>
